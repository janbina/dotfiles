# references `git-number` https://github.com/holygeek/git-number
#            `diff-so-fancy` https://github.com/so-fancy/diff-so-fancy

[alias]
    a = add --all
    an = number add
    cm = commit
    co = checkout
    ps = push
    pst = push --tags
    pl = pull
    rb = rebase
    rbi = rebase --interactive
    br = branch
    st = number
    cb = checkout -b
    ll = log --oneline --graph --decorate --max-count=15
    lll = log --oneline --graph --decorate
    dff = diff HEAD^ HEAD
    discard = checkout -- .
    undo = reset HEAD^
    nah = !git reset --hard && git clean -df
    amend = commit --amend --no-edit
[core]
    editor = vim
    pager = diff-so-fancy | less --tabs=4 -RFX
[rebase]
    autosquash = true
[push]
    default = current
[pull]
    rebase = false
