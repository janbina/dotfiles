[colors]
bg-special = #1d1f27
background = #282a36
current-line = #44475a
selection = #44475a
foreground = #f8f8f2
comment = #6272a4
cyan = #8be9fd
green = #50fa7b
orange = #ffb86c
pink = #ff79c6
purple = #bd93f9
red = #ff5555
yellow = #f1fa8c

[bar/bar]
bottom=false
enable-ipc = true
width = 100%
height = 27
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = ${colors.foreground}

padding-right = 1
module-margin = 1

font-0 = "Jetbrains Mono:pixelsize=9;2"
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1
font-3 = MaterialIcons:size=10;3
font-4 = "Weather Icons:size=9;3"

modules-left = ewmh xwindow
modules-right = wwww cpu memory battery pulseaudio pacmd-name xkeyboard date

tray-position = none

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:50:..%

[module/date]
type = internal/date
interval = 5
date = "%a %d %b [%I:%M]"
format-foreground = ${colors.purple}

[module/backlight]
type = internal/backlight
card = intel_backlight
enable-scroll = true
label = BR %percentage%

[module/cpu]
type = internal/cpu
interval = 2
label = %{T-4}%{T-} %percentage:02%

[module/memory]
type = internal/memory
interval = 3
label = %{T4}%{T-} %percentage_used%

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5
label-volume = %{T4}%{T-} %percentage%
label-muted = %{T4}%{T-} %percentage%

[module/pacmd-name]
type = custom/script
interval = 5
format = [<label>]
exec = ~/bin/pacmd-active-name

[module/ewmh]
type = internal/xworkspaces
enable-scroll = false
enable-click = false
label-active = %index%
label-active-padding = 1
label-active-foreground = ${colors.orange}
label-active-underline = ${colors.orange}
label-empty = %index%
label-empty-foreground = ${colors.purple}
label-empty-padding = 1
label-occupied = %index%
label-occupied-foreground = ${colors.purple}
label-occupied-padding = 1

[module/spotify]
type = custom/script
interval = 1
format = <label>
exec = python ~/.config/polybar/scripts/spotify_status.py

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = scroll lock

[module/battery]
type = custom/script
exec = ~/.config/polybar/scripts/bat.sh
interval = 120
label = %{T4}%{T-} %output%

[module/wwww]
type = custom/script
exec = ~/.config/polybar/scripts/forecast.sh
interval = 600

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

